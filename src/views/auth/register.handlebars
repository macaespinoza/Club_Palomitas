<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card auth-card">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <img src="/img/login.png" alt="login" width="120" height="120" class="me-2">
                    <h2 class="mt-3">Crear Cuenta</h2>
                    <p class="text-muted">Únete y organiza tus películas favoritas</p>
                </div>

                {{#if error}}
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>{{error}}
                </div>
                {{/if}}

                <form action="/api/auth/registro" method="POST" id="registerForm">
                    <div class="mb-3">
                        <label class="form-label" for="nombre_usuario">
                            <i class="bi bi-person me-1"></i>Nombre de usuario
                        </label>
                        <input class="form-control" type="text" name="nombre_usuario" id="nombre_usuario"
                            placeholder="tu_usuario" minlength="3" maxlength="50" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="email">
                            <i class="bi bi-envelope me-1"></i>Email
                        </label>
                        <input class="form-control" type="email" name="email" id="email" placeholder="tu@email.com"
                            required>
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="contrasena">
                            <i class="bi bi-lock me-1"></i>Contraseña
                        </label>
                        <input class="form-control" type="password" name="contrasena" id="contrasena"
                            placeholder="••••••••" minlength="6" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-2">
                        <i class="bi bi-person-plus me-2"></i>Crear Cuenta
                    </button>
                </form>

                <hr class="my-4 border-secondary">

                <p class="text-center mb-0">
                    ¿Ya tienes cuenta?
                    <a href="/auth/login" class="text-primary text-decoration-none">Inicia sesión</a>
                </p>
            </div>
        </div>
    </div>
</div>