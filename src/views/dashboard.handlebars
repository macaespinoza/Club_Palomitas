<div class="mb-4">
    <h1 class="display-5">
        <i class="bi bi-house-door text-primary me-2"></i>
        Bienvenido, {{usuario.nombre_usuario}}
    </h1>
    <p class="text-muted">Gestiona tus listas de películas favoritas</p>
</div>

<div class="row g-4 mb-5">
    <!-- Buscar películas -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100">
            <div class="card-body text-center p-4">
                <img src="/img/buscar-peliculas.svg" alt="Buscar" class="custom-icon mb-3"
                    style="width: 64px; height: 64px;">
                <h5 class="card-title">Buscar Películas</h5>
                <p class="card-text">Encuentra películas en OMDb y agrégalas a tus listas</p>
                <a href="/buscar" class="btn btn-info">
                    <img src="/img/buscar-peliculas.svg" class="custom-icon" style="width: 20px; height: 20px;">Buscar
                </a>
            </div>
        </div>
    </div>

    <!-- Mis listas -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100">
            <div class="card-body text-center p-4">
                <img src="/img/mis-listas.svg" alt="Listas" class="custom-icon mb-3" style="width: 64px; height: 64px;">
                <h5 class="card-title">Mis Listas</h5>
                <p class="card-text">Organiza tus películas en listas personalizadas</p>
                <a href="/listas" class="btn btn-warning">
                    <img src="/img/mis-listas.svg" class="custom-icon" style="width: 20px; height: 20px;">Ver Listas
                </a>
            </div>
        </div>
    </div>

    <!-- Crear lista -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100">
            <div class="card-body text-center p-4">
                <img src="/img/nueva-lista.svg" alt="Nueva" class="custom-icon mb-3" style="width: 64px; height: 64px;">
                <h5 class="card-title">Nueva Lista</h5>
                <p class="card-text">Crea una nueva lista para organizar películas</p>
                <a href="/listas/nueva" class="btn btn-success">
                    <img src="/img/nueva-lista.svg" class="custom-icon" style="width: 20px; height: 20px;">Crear Lista
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Sección de búsqueda rápida -->
<div class="card card-dark border-0 shadow-sm mb-4">
    <div class="card-body p-4">
        <h5 class="card-title mb-3">
            <i class="bi bi-lightning text-warning me-2"></i>Búsqueda Rápida
        </h5>
        <form action="/buscar" method="GET" class="row g-3">
            <div class="col-md-9">
                <input type="text" name="q" class="form-control" placeholder="Escribe el nombre de una película..."
                    required>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-1"></i>Buscar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Películas populares sugeridas -->
<div class="card card-dark border-0 shadow-sm">
    <div class="card-body p-4">
        <h5 class="card-title mb-3">
            <i class="bi bi-fire text-danger me-2"></i>Películas Populares - Recomendadas para ti
        </h5>
        <div id="peliculasPopulares" class="row row-cols-2 row-cols-md-4 row-cols-lg-4 g-3">
            <div class="col-12 text-center">
                <div class="spinner-border text-info" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', async () => {
        const contenedor = document.getElementById('peliculasPopulares');

        try {
            const res = await fetch('/api/peliculas/populares');
            const data = await res.json();

            if (data.exito && data.datos.length > 0) {
                contenedor.innerHTML = data.datos.map(pelicula => `
                <div class="col">
                    <div class="card h-100 bg-dark border-secondary shadow-sm">
                        <img src="${pelicula.poster}" class="card-img-top" alt="${pelicula.titulo}"
                            style="height: 200px; object-fit: cover;"
                            onerror="this.src='https://via.placeholder.com/200x300?text=No+Image'">
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title text-light">${pelicula.titulo}</h6>
                            <p class="card-text small text-muted mb-2">${pelicula.anio}</p>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-star-fill"></i> ${pelicula.puntuacion_imdb}
                                </span>
                                <button class="btn btn-sm btn-primary"
                                    onclick="mostrarModalAgregar('${pelicula.imdb_id}', '${pelicula.titulo.replace(/'/g, "\\'")}')">
                                    <i class="bi bi-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');
            } else {
                contenedor.innerHTML = '<div class="col-12 text-center text-muted">No se pudieron cargar películas populares</div>';
            }
        } catch (error) {
            console.error(error);
            contenedor.innerHTML = '<div class="col-12 text-center text-danger">Error al cargar películas</div>';
        }
    });

    let peliculaSeleccionada = { imdb_id: '', titulo: '' };

    function mostrarModalAgregar(imdbId, titulo) {
        peliculaSeleccionada = { imdb_id: imdbId, titulo };

        fetch('/api/listas', { credentials: 'same-origin' })
            .then(res => res.json())
            .then(data => {
                if (data.exito && data.datos.length > 0) {
                    const opciones = data.datos.map(lista =>
                        `<option value="${lista.id}">${lista.nombre}</option>`
                    ).join('');

                    const contenido = `
                    <div class="modal fade" id="modalAgregarLista" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content bg-dark text-light">
                                <div class="modal-header border-secondary">
                                    <h5 class="modal-title">Agregar "${titulo}" a lista</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <select id="listaSelect" class="form-select bg-secondary text-light border-dark">
                                        ${opciones}
                                    </select>
                                </div>
                                <div class="modal-footer border-secondary">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="button" class="btn btn-primary" onclick="agregarPeliculaALista()">Agregar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;

                    const modalAnterior = document.getElementById('modalAgregarLista');
                    if (modalAnterior) modalAnterior.remove();

                    document.body.insertAdjacentHTML('beforeend', contenido);
                    const modal = new bootstrap.Modal(document.getElementById('modalAgregarLista'));
                    modal.show();
                } else {
                    alert('Primero debes crear una lista');
                    window.location.href = '/listas/nueva';
                }
            })
            .catch(error => {
                console.error(error);
                alert('Error al cargar las listas');
            });
    }

    async function agregarPeliculaALista() {
        const listaId = document.getElementById('listaSelect').value;

        try {
            const res = await fetch('/api/peliculas/agregar-a-lista', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                credentials: 'same-origin',
                body: JSON.stringify({
                    imdb_id: peliculaSeleccionada.imdb_id,
                    lista_id: parseInt(listaId)
                })
            });

            const data = await res.json();

            if (data.exito) {
                alert(`"${peliculaSeleccionada.titulo}" agregada a la lista`);
                bootstrap.Modal.getInstance(document.getElementById('modalAgregarLista')).hide();
            } else {
                alert(data.error || 'Error al agregar película');
            }
        } catch (error) {
            console.error(error);
            alert('Error de conexión');
        }
    }
</script>